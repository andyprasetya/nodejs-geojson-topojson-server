[Unit]
Description=Simple, robust and versatile GeoJSON backend server for geospatial data
Documentation=https://github.com/andyprasetya/nodejs-geojson-topojson-server
After=network.target

[Service]
WorkingDirectory=/home/redbeastie/.nodeapps/api-webmap-pbbp2
Environment=NODE_ENV=production
Type=simple
User=redbeastie
ExecStart=/usr/bin/node /home/redbeastie/.nodeapps/api-webmap-pbbp2/index.js
